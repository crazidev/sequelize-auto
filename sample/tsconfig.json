{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "declaration": false,
    "module": "nodenext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "types",
    "lib",
    "scripts"
  ]
}